{
  "name": "next-calc",
  "version": "1.3.1",
  "description": "NextCalc - Advanced Calculator for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky"
  },
  "keywords": [
    "calculator",
    "electron",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hulion/nextcalc.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0"
  },
  "build": {
    "appId": "com.nextcalc.app",
    "productName": "NextCalc",
    "files": [
      "main.js",
      "preload.js",
      "calculator-lock.js",
      "calculator-lock.html",
      "calculator-lock.css",
      "panic-detector.js",
      "settings.js",
      "settings.html",
      "settings.css",
      "next-logo.svg",
      "config/**/*",
      "features/**/*",
      "ipc/**/*",
      "menu/**/*",
      "window/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "build/icon.icns",
      "target": [
        "zip",
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hulion",
        "repo": "nextcalc"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
